---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import SectionReveal from './SectionReveal.astro';
import CTAButton from './CTAButton.astro';

interface Props {
  imageSrc: ImageMetadata;
  imageAlt: string;
  title: string;
  description: string;
  ctaHref: string;
}

const { imageSrc, imageAlt, title, description, ctaHref } = Astro.props;
---

<section class="bg-warm-black sa-section-padding">
  <div
    class="max-w-4xl mx-auto flex flex-col items-center text-center lg:flex-row lg:items-center lg:text-left lg:gap-16"
  >
    <SectionReveal animation="scale-in">
      <Image
        src={imageSrc}
        alt={imageAlt}
        widths={[250, 400, 800]}
        sizes="(min-width: 1024px) 400px, 250px"
        loading="lazy"
        decoding="async"
        class="rounded-full border-4 border-white w-[250px] md:w-[350px] lg:w-[400px] aspect-square object-cover mx-auto lg:mx-0"
      />
    </SectionReveal>
    <SectionReveal animation="fade-in" delay={200}>
      <div class="mt-8 lg:mt-0">
        <h2 class="font-serif text-3xl md:text-4xl text-white mb-4">{title}</h2>
        <p class="font-sans text-white/90 text-lg leading-relaxed mb-8">
          {description}
        </p>
        <CTAButton
          href={ctaHref}
          variant="outline"
          size="small"
          desktopOnly={true}
        />
      </div>
    </SectionReveal>
  </div>
</section>
