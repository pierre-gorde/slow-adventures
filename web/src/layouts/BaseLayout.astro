---
import '../styles/global.css';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  heroPreloadImage?: string;
}

const {
  title,
  description,
  ogImage = '/og-image.jpg',
  heroPreloadImage,
} = Astro.props;
const siteUrl = Astro.site ?? new URL('https://slowadventures.fr');
const ogImageUrl = new URL(ogImage, siteUrl);
const canonicalUrl = Astro.url;
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': ['LocalBusiness', 'TravelAgency'],
  name: 'Slow Adventures',
  description: 'Création de voyages immersifs aux Amériques',
  url: siteUrl.toString(),
  image: new URL('/og-image.jpg', siteUrl).toString(),
  founder: {
    '@type': 'Person',
    name: 'Elena',
  },
  areaServed: {
    '@type': 'Place',
    name: 'Amériques',
  },
};
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalUrl.toString()} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {
      heroPreloadImage && (
        <link
          rel="preload"
          as="image"
          href={heroPreloadImage}
          type="image/webp"
        />
      )
    }
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Stardos+Stencil:wght@400;700&family=Bree+Serif&display=swap"
      onload="this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Stardos+Stencil:wght@400;700&family=Bree+Serif&display=swap"
        rel="stylesheet"
      />
      <style>
        [data-reveal] {
          opacity: 1 !important;
        }
      </style>
    </noscript>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl.toString()} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.toString()} />
    <meta property="og:locale" content="fr_FR" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl.toString()} />
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body class="bg-creme text-warm-black font-sans">
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-terracotta focus:text-white focus:px-4 focus:py-2 focus:rounded"
    >
      Aller au contenu
    </a>
    <slot />
    <Footer />
    <script is:inline>
      // Fallback CSS pour [data-reveal] quand GSAP n'est pas encore chargé
      if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver(
          function (entries) {
            entries.forEach(function (entry) {
              if (entry.isIntersecting) {
                entry.target.classList.add('revealed');
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.1 }
        );
        document.querySelectorAll('[data-reveal]').forEach(function (el) {
          observer.observe(el);
        });
        // Expose for GSAP coordination (SectionReveal takes over when loaded)
        window.__revealObserver = observer;
      } else {
        document.querySelectorAll('[data-reveal]').forEach(function (el) {
          el.classList.add('revealed');
        });
      }
    </script>
  </body>
</html>
